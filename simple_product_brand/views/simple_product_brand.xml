<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="simple_product_brand_search_form_view" model="ir.ui.view">
        <field name="name">simple.product.brand.search</field>
        <field name="model">simple.product.brand</field>
        <field name="arch" type="xml">
            <search string="Brand">
                <field name="name"/>
            </search>
        </field>
    </record>

    <act_window
        id="action_open_products_from_simple_brand"
        name="Products"
        res_model="product.template"
        view_mode="tree,form,kanban"
        domain="[('simple_product_brand_id', '=', active_id)]"/>
    <!--        view_type="form"-->

    <record id="view_simple_product_brand_form" model="ir.ui.view">
        <field name="name">simple.product.brand.form</field>
        <field name="model">simple.product.brand</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button
                                type="action"
                                name="%(action_open_products_from_simple_brand)d"
                                class="oe_stat_button"
                                icon="fa-cubes">
                            <field name="brand_products_count" widget="statinfo" string="Related Products"/>
                        </button>
                    </div>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                            <label for="name" string="Brand Name" class="oe_edit_only"/>
                            <h1><field name="name"/></h1>
                    </div>
                    <group string="Description">
                        <field name="description" nolabel="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_simple_product_brand_tree" model="ir.ui.view">
        <field name="name">simple.product.brand.tree</field>
        <field name="model">simple.product.brand</field>
        <field name="arch" type="xml">
            <tree string="simple.product.brand">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="action_simple_product_brand">
        <field name="name">Brand</field>
        <field name="res_model">simple.product.brand</field>
        <!--<field name="view_type">form</field>-->
        <field name="view_mode">tree,form</field>
        <field name="view_id" eval="view_simple_product_brand_tree"/>
    </record>

    <menuitem id="menu_simple_product_brand"
              name="Brands"
              action="action_simple_product_brand"
              parent="sale.prod_config_main"/>

</odoo>
