<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="product_kanban_view" model="ir.ui.view">
        <field name="name">product.product.kanban.brand</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_kanban_view" />
        <field name="arch" type="xml">
            <xpath expr="//div[@class='oe_kanban_details']/strong[1]" position="after">
                <div>
                    <a t-if="record.simple_product_brand_id" type="open">
                        <field name="simple_product_brand_id"/>
                    </a>
                </div>
            </xpath>
        </field>
    </record>

    <record id="product_product_tree_view" model="ir.ui.view">
        <field name="name">product.product.tree.brand</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_product_tree_view" />
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="simple_product_brand_id"/>
            </field>
        </field>
    </record>

</odoo>
