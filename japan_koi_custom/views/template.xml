            <xpath expr="//notebook[last()]" position="inside">
                <page string="Koi" name="japan_koi">
                    <group>
                    <group  col="4" colspan="2">
                        <field name="variete"/>
                        <field name="sexe"/>
                        <field name="taille"/>
                        <field name="age"/>
                        <field name="eleveur"/>
                        <field name="bac"/>
                    </group>
                    <group>
                        <field name="lien_video" widget="url"/>
                        </group>
                        
                    </group>
                </page>
            </xpath>

        </field>
    </record>
        
